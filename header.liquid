<style>
/* === HEADER PREMIUM ALCI === */
.alci-header{position:fixed;top:0;left:0;width:100%;z-index:9999;background:rgba(8,13,31,.95);backdrop-filter:blur(20px);border-bottom:1px solid rgba(0,194,255,.2);transition:all .3s}
.alci-header.scrolled{background:rgba(8,13,31,.98);box-shadow:0 10px 40px rgba(0,194,255,.2)}
.alci-nav{max-width:1400px;margin:0 auto;padding:15px 5%;display:flex;align-items:center;justify-content:space-between}

/* === LOGO === */
.alci-logo-link{display:flex;align-items:center;gap:12px;text-decoration:none;transition:all .3s}
.alci-logo-link:hover{transform:scale(1.05)}
.alci-logo-circle{width:50px;height:50px;background:linear-gradient(135deg,#00C2FF,#7AF3FF);border-radius:50%;display:flex;align-items:center;justify-content:center;font-weight:900;font-size:1.3rem;color:#080D1F;box-shadow:0 0 30px rgba(0,194,255,.6);position:relative;animation:logoFloatHeader 3s ease-in-out infinite}
@keyframes logoFloatHeader{0%,100%{transform:translateY(0)}50%{transform:translateY(-5px)}}
.alci-logo-circle::before{content:'';position:absolute;width:60px;height:60px;border:2px solid #00C2FF;border-radius:50%;animation:logoRingHeader 2s linear infinite}
@keyframes logoRingHeader{0%{transform:scale(1);opacity:1}100%{transform:scale(1.3);opacity:0}}
.alci-logo-text{font-size:1.4rem;font-weight:900;color:#FFF;letter-spacing:-.02em}

/* === MEN√ö DESKTOP === */
.alci-menu-desktop{display:flex;align-items:center;gap:35px}
.alci-menu-desktop a{color:#E0E7FF;text-decoration:none;font-weight:600;font-size:1rem;transition:all .3s;position:relative}
.alci-menu-desktop a::after{content:'';position:absolute;bottom:-5px;left:0;width:0;height:2px;background:linear-gradient(90deg,#00C2FF,#7AF3FF);transition:width .3s}
.alci-menu-desktop a:hover{color:#00C2FF}
.alci-menu-desktop a:hover::after{width:100%}

/* === BOTONES HEADER === */
.alci-header-actions{display:flex;align-items:center;gap:15px}
.alci-btn-header{padding:12px 28px;background:linear-gradient(135deg,#00C2FF,#7AF3FF);color:#080D1F;border:none;border-radius:50px;font-weight:700;font-size:.95rem;cursor:pointer;transition:all .3s;text-decoration:none;display:inline-flex;align-items:center;gap:8px;box-shadow:0 5px 20px rgba(0,194,255,.4)}
.alci-btn-header:hover{transform:translateY(-2px);box-shadow:0 8px 30px rgba(0,194,255,.6)}
.alci-icon-btn{width:45px;height:45px;background:rgba(255,255,255,.05);border:1px solid rgba(0,194,255,.3);border-radius:50%;display:flex;align-items:center;justify-content:center;cursor:pointer;transition:all .3s;color:#00C2FF;font-size:1.2rem}
.alci-icon-btn:hover{background:rgba(0,194,255,.1);border-color:#00C2FF;transform:scale(1.1)}

/* === MEN√ö HAMBURGUESA === */
.alci-hamburger{display:none;width:45px;height:45px;background:rgba(255,255,255,.05);border:1px solid rgba(0,194,255,.3);border-radius:12px;cursor:pointer;flex-direction:column;align-items:center;justify-content:center;gap:5px;transition:all .3s}
.alci-hamburger:hover{background:rgba(0,194,255,.1);border-color:#00C2FF}
.alci-hamburger span{width:22px;height:2px;background:#00C2FF;border-radius:2px;transition:all .3s}
.alci-hamburger.active span:nth-child(1){transform:rotate(45deg) translateY(7px)}
.alci-hamburger.active span:nth-child(2){opacity:0}
.alci-hamburger.active span:nth-child(3){transform:rotate(-45deg) translateY(-7px)}

/* === MEN√ö M√ìVIL === */
.alci-menu-mobile{position:fixed;top:80px;left:0;width:100%;height:calc(100vh - 80px);background:rgba(8,13,31,.98);backdrop-filter:blur(30px);display:none;flex-direction:column;padding:40px 5%;overflow-y:auto;border-top:1px solid rgba(0,194,255,.2)}
.alci-menu-mobile.active{display:flex;animation:slideDown .3s ease}
@keyframes slideDown{from{opacity:0;transform:translateY(-20px)}to{opacity:1;transform:translateY(0)}}
.alci-menu-mobile a{color:#E0E7FF;text-decoration:none;font-size:1.3rem;font-weight:600;padding:20px 25px;border-radius:16px;background:rgba(255,255,255,.03);border:1px solid rgba(0,194,255,.2);margin-bottom:15px;transition:all .3s;display:flex;align-items:center;justify-content:space-between}
.alci-menu-mobile a:hover{background:rgba(0,194,255,.1);border-color:#00C2FF;color:#00C2FF;transform:translateX(10px)}
.alci-menu-mobile a::after{content:'‚Üí';font-size:1.5rem;color:#00C2FF}
.alci-menu-mobile-cta{margin-top:30px;padding-top:30px;border-top:1px solid rgba(0,194,255,.2)}
.alci-menu-mobile-cta .alci-btn-header{width:100%;justify-content:center;font-size:1.1rem;padding:18px}

/* === RESPONSIVE === */
@media(max-width:968px){
.alci-menu-desktop{display:none}
.alci-hamburger{display:flex}
.alci-header-actions .alci-btn-header{display:none}
}
@media(max-width:480px){
.alci-logo-circle{width:45px;height:45px;font-size:1.1rem}
.alci-logo-text{font-size:1.2rem}
.alci-icon-btn{width:40px;height:40px;font-size:1.1rem}
.alci-hamburger{width:40px;height:40px}
.alci-menu-mobile a{font-size:1.1rem;padding:18px 20px}
}

/* === ANIMACI√ìN DE ENTRADA === */
body{padding-top:80px}
</style>

