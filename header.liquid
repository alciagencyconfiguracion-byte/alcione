<script>
// Toggle men√∫ m√≥vil
function toggleMobileMenu(){
  const hamburger=document.querySelector('.alci-hamburger');
  const menu=document.getElementById('alciMenuMobile');
  hamburger.classList.toggle('active');
  menu.classList.toggle('active');
  document.body.style.overflow=menu.classList.contains('active')?'hidden':'auto';
}

// Cerrar men√∫ al hacer clic en un link
document.querySelectorAll('.alci-menu-mobile a').forEach(link=>{
  link.addEventListener('click',()=>{
    document.querySelector('.alci-hamburger').classList.remove('active');
    document.getElementById('alciMenuMobile').classList.remove('active');
    document.body.style.overflow='auto';
  });
});

// Scroll effect en header
window.addEventListener('scroll',()=>{
  const header=document.getElementById('alciHeader');
  if(window.scrollY>50){
    header.classList.add('scrolled');
  }else{
    header.classList.remove('scrolled');
  }
});

// Cerrar men√∫ con ESC
document.addEventListener('keydown',(e)=>{
  if(e.key==='Escape'){
    document.querySelector('.alci-hamburger').classList.remove('active');
    document.getElementById('alciMenuMobile').classList.remove('active');
    document.body.style.overflow='auto';
  }
});
</script>

